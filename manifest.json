{
  "manifest_version": 3,
  "name": "Solana Wallet Scanner",
  "version": "1.0.0",
  "description": "Professional Solana wallet scanner with clean interface",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["https://api.helius.xyz/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Solana Wallet Scanner"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
